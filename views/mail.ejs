<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <title>天气邮件</title>
    <style>
        .weather-data{
            color: red;
        }
    </style>
</head>
<body style="padding: 0;margin: 0">
<div style="padding: 8px;max-width: 750px;margin: 0 auto;width: 100%;box-sizing: border-box;margin-top: 16px">
    <% if (weather) { %>
        <div style="position: relative; padding-top: 38px;margin-bottom: 36px; border: 1px solid #dcdcdc;padding-bottom: 16px">
            <div style="position: absolute;top: 8px; left: 8px">
                <% if (weather.moreData.alert) { %>
                    <% weather.moreData.alert.forEach(function(item){%>
                        <span style="background: <%= item.level === '蓝色' ? '#3069F6' : (item.level === '黄色' ? '#FCFF10' : (item.level === '橙色' ? '#F79901' : '#D2302D' ))%>;color: #fff;padding: 3px 6px;margin-right: 8px;border-radius: 2px;text-shadow: 0 0 3px rgba(0,0,0,0.7)"><%=item.typeName %></span>
                    <% }) %>
                <% } %>
            </div>
            <div style="position: absolute;top: 8px;right: 8px">
                <%= weather.fxDate %>
            </div>
            <div style="display: flex;align-items: center;justify-content: center">
                <img style="width: 120px" src="http://api.tiansc.top/api/memo/love/icon?code=<%= weather.iconDay %>" alt="">
                <div style="margin-left: 18px">
                    <div style="font-size: 20px;color: #333">
                        <span><%= weather.city %>:</span>
                        <span><%= weather.textDay %></span>
                    </div>
                    <div style="font-size: 24px; color: cornflowerblue;margin-top: 12px">
                        <%= weather.tempMin %>℃ ~ <%= weather.tempMax %>℃
                    </div>
                </div>
            </div>
        </div>
        <% } %>
    <% if (memory.dayCount) { %>
        <div style="font-size: 24px; font-weight: 600; text-align: center;letter-spacing: 2px">
            <%= memory.text %>
        </div>
        <div style="margin: 8px 0 36px;font-size: 36px; color: coral;font-weight: 600; text-align: center">
            <%= memory.dayCount %>天
        </div>
    <% } %>
    <div style="position: relative">
        <img src="<%= one.img%>" alt="" style="width: 100%">
        <div style="position: absolute;bottom: 0px;width: 100%;padding: 6px;box-sizing: border-box;background: rgba(220, 220, 220, 0.65);text-align: center;font-size: 14px;color: #333; font-style: italic">
            <%= one.text %>
        </div>
    </div>

    <% if (news && news.length) { %>
        <div style="margin-top: 36px">
            <div style="font-size: 20px; font-weight: 600; margin: 30px 0 12px">知乎日报</div>
            <div style="display: flex;flex-wrap: wrap;flex-shrink: 0">
                <% news.forEach(function(item){%>
                    <a href="<%= item.link %>" target="_blank">
                        <img style="width: 100%; max-width: 450px" src="<%= item.img %>" />
                        <div style="font-size: 16px;margin: 6px 0 26px;color: #333"><%= item.title %></div>
                    </a>
                <% }) %>
            </div>
        </div>
    <% } %>


</div>
</body>
</html>
